@model abyssiness.Models.Member

@{
    ViewData["Title"] = "註冊會員";
}

<div class="page-header row">
    <div class="col-md-3"></div>
    <h1 class="col-md-6">早安，你今天註冊了嗎？</h1>
    <div class="col-md-3"></div>
</div>

<form asp-action="NewMember">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="account" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <input asp-for="account" class="form-control" />
                <span asp-validation-for="account" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="password" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="name" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="phone" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"></div>
            <input type="submit" value="送出" class="btn btn-success col-md-1" />
            <div class="col-md-1"></div>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-danger col-md-1">取消</a>
            <div class="col-md-5"></div>
        </div>
    </div>
</form>
